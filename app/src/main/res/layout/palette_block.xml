<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurfaceBright"
    android:orientation="horizontal">

    <com.besome.sketch.lib.ui.CustomScrollView
        android:id="@+id/scv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.besome.sketch.lib.ui.CustomHorizontalScrollView
            android:id="@+id/hscv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/block_builder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </com.besome.sketch.lib.ui.CustomHorizontalScrollView>
    </com.besome.sketch.lib.ui.CustomScrollView>

    <ScrollView
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <mod.Edward.KOC.Logic.PaletteSelectorXSearch
            android:id="@+id/palette_selector"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>